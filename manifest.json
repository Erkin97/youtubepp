{
  "manifest_version": 2,
  "name": "YouTubeCommentsTranslator",
  "description": "YouTube Comments Translator",
  "version": "0.1",
  "author": "erkin97",
  "page_action": {
    "default_popup": "/src/popup.html",
    "default_title": "Options"
  },
  "icons": {
    "16": "/public/icon16.png",
    "48": "/public/icon128.png",
    "128": "/public/icon128.png"
  },
  "background": {
    "scripts": ["/src/eventPage.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["/src/content.js"],
      "css": ["/src/style.css"],
      "run_at": "document_idle"
    }
  ],
  "permissions": ["*://*.youtube.com/*", "tabs", "storage"]
}
